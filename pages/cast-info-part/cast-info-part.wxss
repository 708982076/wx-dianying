/* pages/cast-info-part/cast-info-part.wxss */
.cast-info{
	display: flex;
}
.info-text{
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
}
.info-name{
	margin-bottom: 10rpx;	
	font-size: 38rpx;
	font-weight: 600;
}
.info-bornPlace, .info-birthday, .info-professions{
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
	font-size: 24rpx;
	color: #aaa;
}
.info-rating-wrap{
	align-self: center;
}
.info-rating{
	padding: 8rpx 5rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
	width: 150rpx;
	height: 30rpx;
	border-radius: 10rpx;
	border: 1rpx solid rosybrown;
}
.rating-num{
	font-size: 28rpx;
	text-align: center;
}