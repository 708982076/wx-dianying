/* pages/movie-detail/movie-detail.wxss */
@import '/pages/movie-detail-info/movie-detail-info.wxss';
.movie-wrap{
	padding-top: 80rpx; 
}
.movie-img-wrap{
	position: relative;
	margin: 0 auto;
	width: 300rpx;
	height: 300rpx;
}
.movie-img{
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
}
.detail-wrap{
	margin-top: 50rpx;
	padding: 50rpx 30rpx 0; 
	background-color: #fff; 
}
.movie-intro{
	margin-bottom: 50rpx; 
}
.movie-head{
	font-size: 34rpx;
	color: #aaa;
	margin-top: 5rpx;
}
.intro-text{
	font-size: 28rpx;
}
.onFold{
	height: auto;
	overflow: visible;
}
.offFold{
	height: 120rpx;
	overflow: hidden;
}
.intro-unfold{
	font-size: 24rpx;
	color: green;
}
.cast-scroll{
	width: 100vw;
}
.cast-item{
	display: inline-block;
	width: 160rpx;
	padding: 5rpx;
}
.cast-img{
	width: 160rpx;
	height: 200rpx;
}
.cast-name{
	text-align: center;
	font-size: 24rpx;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden; 
}