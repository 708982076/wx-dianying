.search-input{
    flex-grow: 1;
}
.search-cancel{
    width: 30px;
    font-size: 24rpx;
}
.movie-item{
	position: relative;
	display: flex;
	width: 100%;
	height: 100rpx;
	padding: 20rpx 30rpx;
	align-items: center; 
	background-color: #fff;
	border-bottom: 1rpx solid #ccc; 
}
.img-wrapper{
	position: absolute;
	width: 80rpx;
	height: 100rpx;
}
.movie-img{
	width: 100%;
	height: 100%;
}
.desc-wrapper{
	display: flex;
	width: 80%;
	margin-left: 100rpx;
	flex-direction: column;
}
.movie-name{
	font-size: 30rpx; 
	font-weight: 600;
}
.movie-desc{
	font-size: 28rpx; 
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden; 
}